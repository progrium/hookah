#!/opt/local/Library/Frameworks/Python.framework/Versions/2.5/Resources/Python.app/Contents/MacOS/Python

import sys
from twisted.internet import reactor
from twisted.web.server import Site
from twisted.python import log
from optparse import OptionParser
from hookah.web import HookahResource

parser = OptionParser()
parser.add_option('--port', '-p',
                  help="Port number for hookah's HTTP server (default 8080)",
                  default=8080, type='int')
parser.add_option('--verbose', '-v', help="Show http activity",
                  action="store_true")
opts, args = parser.parse_args()

if opts.verbose:
    log.startLogging(sys.stdout)

reactor.listenTCP(opts.port, Site(HookahResource.setup()))
reactor.run()

